<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane alignment="CENTER" hgap="20" vgap="20" xmlns:fx="http://javafx.com/fxml"
          fx:controller="app.smartboard.SmartBoardController" stylesheets="../../css/main.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Username:" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="2">
        <Button text="Sign in" onAction="#onHelloButtonClick"/>
        <Button text="Close" onAction="#onHelloButtonClick"/>
    </HBox>
    <Label fx:id="welcomeText"/>
</GridPane>
