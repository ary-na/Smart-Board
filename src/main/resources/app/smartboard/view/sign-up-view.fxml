<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="800.0" prefWidth="1100.0" styleClass="root" stylesheets="@../../../css/main.css"
          xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Label styleClass="label-scene-title" text="Sign up" textAlignment="CENTER">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <VBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label styleClass="label-text-field" text="Username"/>
                        <TextField fx:id="username" promptText="Enter a username">
                            <padding>
                                <Insets bottom="12.0" left="8.0" right="8.0" top="12.0"/>
                            </padding>
                        </TextField>
                        <Label styleClass="label-text-field" text="First name"/>
                        <TextField fx:id="firstName" promptText="Enter your first name">
                            <padding>
                                <Insets bottom="12.0" left="8.0" right="8.0" top="12.0"/>
                            </padding>
                        </TextField>
                        <Label styleClass="label-text-field" text="Last name"/>
                        <TextField fx:id="lastName" promptText="Enter your last name">
                            <padding>
                                <Insets bottom="12.0" left="8.0" right="8.0" top="12.0"/>
                            </padding>
                        </TextField>
                        <Label styleClass="label-text-field" text="Password"/>
                        <PasswordField fx:id="password" promptText="Enter a password">
                            <padding>
                                <Insets bottom="12.0" left="8.0" right="8.0" top="12.0"/>
                            </padding>
                        </PasswordField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </VBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick"
                                styleClass="button-cancel" text="Cancel" textAlignment="CENTER">
                            <padding>
                                <Insets bottom="12.0" left="80.0" right="80.0" top="12.0"/>
                            </padding>
                        </Button>
                        <Button onAction="#onSignUpButtonClick" mnemonicParsing="false" text="Sign up"
                                textAlignment="CENTER">
                            <padding>
                                <Insets bottom="12.0" left="80.0" right="80.0" top="12.0"/>
                            </padding>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </VBox>
        <ImageView fitWidth="550.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
            <image>
                <Image url="@../../../assets/sign-up-background.png"/>
            </image>
        </ImageView>
    </children>
</GridPane>
