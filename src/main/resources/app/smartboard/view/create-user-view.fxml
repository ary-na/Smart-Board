<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="20" prefHeight="800.0" prefWidth="1100.0" vgap="20" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.smartboard.controller.CreateUserController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Username:" GridPane.rowIndex="2" />
    <TextField fx:id="userName" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="First Name:" GridPane.rowIndex="3" />
    <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Last Name:" GridPane.rowIndex="4" />
    <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Password:" GridPane.rowIndex="5" />
    <TextField fx:id="psw" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Profile Photo:" GridPane.rowIndex="6" />
    <TextField fx:id="profilePhoto" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="7">
        <Button onAction="#onCreateUserButtonClick" text="Create User" />
        <Button fx:id="closeButton" onAction="#onCloseButtonClick" text="Close" />
    </HBox>
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
